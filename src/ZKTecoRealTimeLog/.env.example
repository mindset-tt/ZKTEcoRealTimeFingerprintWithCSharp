# ============================================
# ZKTEco K40 Real-Time Log Monitor Configuration
# ============================================
# Multi-Device + Multi-Database Support
# Enable multiple databases by setting each *_ENABLED=true

# ============================================
# MULTI-DEVICE CONFIGURATION
# ============================================
# Configure multiple devices using DEVICE_N_* format
# N = 1, 2, 3... up to 20 devices

# Device 1 - Main Entrance
DEVICE_1_ENABLED=true
DEVICE_1_NAME=Main Entrance
DEVICE_1_IP=10.233.102.111
DEVICE_1_PORT=4370

# Device 2 - Office Door 2 (example - disabled)
DEVICE_2_ENABLED=false
DEVICE_2_NAME=Back Door
DEVICE_2_IP=10.233.102.121
DEVICE_2_PORT=4370

# Device 3 - Office (example - disabled)
DEVICE_3_ENABLED=false
DEVICE_3_NAME=Office
DEVICE_3_IP=10.233.102.122
DEVICE_3_PORT=4370

# Legacy single device (used if no DEVICE_N_* configured)
# ZKTECO_IP=10.233.102.222
# ZKTECO_PORT=4370

# ============================================
# FILE LOGGING
# ============================================
LOG_FILE_PATH=logs/zkteco.log

# ============================================
# POSTGRESQL DATABASE
# ============================================
POSTGRES_ENABLED=true
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=testAttendance
POSTGRES_USER=postgres
POSTGRES_PASSWORD=123456Aa!

# ============================================
# MYSQL / MARIADB DATABASE
# ============================================
MYSQL_ENABLED=false
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=zkteco
MYSQL_USER=root
MYSQL_PASSWORD=

# ============================================
# SQL SERVER DATABASE
# ============================================
SQLSERVER_ENABLED=false
SQLSERVER_HOST=localhost
SQLSERVER_PORT=1433
SQLSERVER_DATABASE=zkteco
SQLSERVER_USER=sa
SQLSERVER_PASSWORD=

# ============================================
# SQLITE DATABASE
# ============================================
SQLITE_ENABLED=true
SQLITE_DATABASE=zkteco.db

# ============================================
# ORACLE DATABASE
# ============================================
ORACLE_ENABLED=false
